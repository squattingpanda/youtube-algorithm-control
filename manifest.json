{
  "manifest_version": 3,
  "name": "YouTube Algorithm Control",
  "version": "0.1.0",
  "description": "Steer YouTube's algorithm with natural language preferences",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
